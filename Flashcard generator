from flask import Flask, jsonify, request
from flask_cors import CORS

app = Flask(__name__)
CORS(app)

db = [
    {"Question": "What is Python?", "Answer": "Python is a programming language"},
    {"Question": "What is Flask?", "Answer": "Flask is a web framework for Python"}
]

@app.route("/generate_flashcards", methods=["POST"])
def add_flashcard():
    data = request.get_json()
    a = {}
    a["Question"] = data["Question"]
    a["Answer"] = data["Answer"]
    db.append(a)
    return jsonify({"Success": "Added new flashcard"}), 200

# This runs the Flask app server when you use the command line to launch the script
if __name__ == "__main__":
    app.run(debug=True)
